{
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"importHelpers": true,
		"isolatedModules": true,
		"lib": ["es2020", "dom", "dom.iterable"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitThis": true,
		"preserveValueImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"stripInternal": true,
		"target": "es2020",
		"types": ["node"],

		"baseUrl": "./",
		"paths": {
			"@signalchain/utils/node": ["node_modules/@signalchain/utils/dist/node"],
			"@signalchain/utils/node/cleanDir": ["node_modules/@signalchain/utils/dist/node/cleanDir"],
			"@signalchain/utils/decamel": ["node_modules/@signalchain/utils/dist/decamel"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
