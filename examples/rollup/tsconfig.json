{
	"compilerOptions": {
		"noEmit": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["es2020", "dom", "dom.iterable"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitThis": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"stripInternal": true,
		"target": "es2019",
		"types": ["node"],
		"paths": {
			"@signalchain/utils/node": ["node_modules/@signalchain/utils/dist/node"],
			"@signalchain/utils/node/cleanDir": ["node_modules/@signalchain/utils/dist/node/cleanDir"],
			"@signalchain/utils/decamel": ["node_modules/@signalchain/utils/dist/decamel"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
